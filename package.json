{
  "name": "client-updater-version-2",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "bin": {
    "client-updater": "./cli/dist/index.js"
  },
  "files": [
    "src",
    "public",
    "docs",
    "components.json",
    "next.config.js",
    "postcss.config.js",
    "prettier.config.js",
    "tsconfig.json",
    "drizzle.config.ts",
    "vitest.config.ts",
    ".env.example",
    ".gitignore",
    ".eslintrc.json",
    ".npmrc",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./cli": {
      "types": "./cli/dist/index.d.ts",
      "import": "./cli/dist/index.js",
      "require": "./cli/dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "next build",
    "build:cli": "cd cli && pnpm build",
    "check": "eslint . && tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "dotenv -e .env -- tsx src/server/db/seed/index.ts",
    "db:enable-rls": "dotenv -e .env -- tsx src/server/db/scripts/enable-rls.ts",
    "db:disable-rls": "dotenv -e .env -- tsx src/server/db/scripts/disable-rls.ts",
    "dev": "next dev --turbo",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "publish:framework": "node scripts/publish.js",
    "postinstall": "node -e \"console.log('Client Updater Version 2 installed successfully! Run \\\"pnpm dev\\\" to start development.')\"",
    "preview": "next build && next start",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@clerk/nextjs": "^6.36.5",
    "@hono/zod-validator": "^0.7.6",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.14",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.41.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "hono": "^4.11.3",
    "https-proxy-agent": "^7.0.6",
    "lucide-react": "^0.562.0",
    "next": "^15.2.3",
    "postgres": "^3.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "snowflake-sdk": "^2.3.3",
    "svix": "^1.82.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.2",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@tailwindcss/postcss": "^4.0.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/snowflake-sdk": "^1.6.24",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.3",
    "eslint-plugin-drizzle": "^0.2.3",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.15",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vitest": "^4.0.16"
  },
  "ct3aMetadata": {
    "initVersion": "7.40.0"
  },
  "packageManager": "pnpm@10.26.1",
  "dtt": {
    "version": "0.1.18"
  }
}
